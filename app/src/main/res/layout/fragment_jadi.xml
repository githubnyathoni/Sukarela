<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.jadi.JadiFragment">
    <Button
        android:id="@+id/lokasi"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Lokasi"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="12dp"
        android:background="@drawable/navbar"/>
    <Button
        android:id="@+id/kategori"
        android:layout_width="160dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="12dp"
        android:layout_height="wrap_content"
        android:text="Kategori"
        android:background="@drawable/navbar"
        android:layout_toRightOf="@+id/lokasi"/>
    <ImageView
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:src="@drawable/carousel1"
        android:layout_below="@+id/lokasi"
        android:id="@+id/carousel1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="12dp"/>
    <TextView
        android:gravity="center"
        android:layout_marginLeft="12dp"
        android:background="@drawable/navbar"
        android:text="Aksi Bantu Guru Nusantara"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/carousel1"/>
    <ImageView
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:src="@drawable/carousel2"
        android:layout_below="@+id/carousel1"
        android:id="@+id/carousel2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="12dp"/>
    <TextView
        android:gravity="center"
        android:layout_marginLeft="12dp"
        android:background="@drawable/navbar"
        android:text="Pengajar Kelas Bahasa Inggris"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/carousel2"/>
    <ImageView
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:src="@drawable/carousel3"
        android:layout_below="@+id/carousel2"
        android:id="@+id/carousel3"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="12dp"/>
    <TextView
        android:gravity="center"
        android:layout_marginLeft="12dp"
        android:background="@drawable/navbar"
        android:text="Relawan Teaching Challenge Video"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/carousel3"/>
    </RelativeLayout>
</ScrollView>